# =============================================================================
# Kong-Zitadel E2E Test Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Kong Gateway Configuration
# -----------------------------------------------------------------------------
KONG_URL=https://ca-kong-kombify-prod.gentlemoss-1ad74075.westeurope.azurecontainerapps.io

# Kong Admin API (for configuration deployment)
KONG_ADMIN_URL=http://localhost:8001

# -----------------------------------------------------------------------------
# Zitadel OIDC Configuration
# -----------------------------------------------------------------------------
ZITADEL_ISSUER=https://auth.kombisphere.io
ZITADEL_CLIENT_ID=your-client-id
ZITADEL_CLIENT_SECRET=your-client-secret
ZITADEL_PROJECT_ID=your-project-id

# -----------------------------------------------------------------------------
# KombiSphere Application
# -----------------------------------------------------------------------------
KOMBISPHERE_URL=https://app.kombify.io

# -----------------------------------------------------------------------------
# Test Email Configuration (testmail.app)
# -----------------------------------------------------------------------------
# Get your namespace from https://testmail.app
TESTMAIL_NAMESPACE=your-namespace
TESTMAIL_API_KEY=your-api-key

# -----------------------------------------------------------------------------
# Test Credentials (for existing user tests)
# -----------------------------------------------------------------------------
# Create a test user in Zitadel for automated testing
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test-password

# -----------------------------------------------------------------------------
# Redis Configuration (for rate limiting tests)
# -----------------------------------------------------------------------------
REDIS_HOST=your-redis-host.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=your-redis-password
REDIS_SSL=true

# -----------------------------------------------------------------------------
# Azure Configuration
# -----------------------------------------------------------------------------
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=rg-kombify-prod
AZURE_KEYVAULT_NAME=kv-kombify-prod

# -----------------------------------------------------------------------------
# CI/CD Configuration
# -----------------------------------------------------------------------------
CI=false
HEADLESS=true
